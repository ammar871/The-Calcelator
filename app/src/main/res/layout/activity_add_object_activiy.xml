<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluelighit"
        tools:context="com.alltaskes.thecalclatur.screens.AddObjectActiviy">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_vertical"
                app:cardBackgroundColor="@color/violet"
                app:cardCornerRadius="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".73">

                <EditText

                    android:id="@+id/edt_object"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/violet"

                    android:fontFamily="@font/homefont"
                    android:hint="عنوان الموضوع "
                    android:paddingRight="6dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"

                    android:padding="5dp"
                    android:textSize="25dp" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/close_obj"
                app:layout_constraintRight_toLeftOf="@id/card_edt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12"

                />

            <ImageView
                android:id="@+id/add_item"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:padding="1dp"
                android:src="@drawable/suc_obj"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/img_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintTop_toBottomOf="@id/cons_appbar">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img_isrecorder"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gif"
                    android:visibility="invisible" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/img_isrecorder"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"

                    android:scrollbars="vertical">

                    <com.github.irshulx.Editor
                        android:id="@+id/editor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"

                        android:paddingRight="10dp"
                        android:paddingBottom="100dp"
                        app:placeholder="اكتب هنا ..."
                        app:render_type="false" />
                </ScrollView>


                <ImageView
                    android:id="@+id/img_open"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="4dp"

                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_add_yalow_24" />

                <ImageView
                    android:id="@+id/fab_photo"
                    android:layout_width="40dp"
                    android:layout_height="30dp"

                    android:layout_above="@id/img_open"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="6dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_baseline_insert_photo_24" />

                <ImageView
                    android:id="@+id/img_record"
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:layout_above="@id/fab_photo"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/violet"
                    android:padding="5dp"
                    android:paddingTop="5dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/lestin" />

                <ImageView

                    android:id="@+id/img_calculate"
                    android:layout_width="30dp"

                    android:layout_height="22dp"
                    android:layout_above="@id/img_record"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_calculat"

                    android:visibility="invisible" />

                <HorizontalScrollView
                    android:id="@+id/toolbara"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/img_open"

                    >

                    <LinearLayout
                        android:id="@+id/editor_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fadingEdge="horizontal"
                        android:fadingEdgeLength="20dp"
                        android:orientation="horizontal"
                        android:requiresFadingEdge="horizontal">


                        <Button
                            android:id="@+id/action_h1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:width="40dp"
                            android:height="40dp"
                            android:background="@android:color/transparent"
                            android:text="H1"
                            android:textColor="#444444"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/action_h2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:width="40dp"
                            android:height="40dp"
                            android:background="@android:color/transparent"
                            android:text="H2"
                            android:textColor="#444444"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/action_h3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:width="40dp"
                            android:height="40dp"
                            android:background="@android:color/transparent"
                            android:text="H3"
                            android:textColor="#444444"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/action_bold"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/icon_bold" />

                        <ImageButton
                            android:id="@+id/action_Italic"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/icon_italic" />



                        <ImageButton
                            android:id="@+id/action_blockquote"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/ic_blockquote" />


                        <ImageButton
                            android:id="@+id/action_color"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:padding="11dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/highlight" />


                        <ImageButton
                            android:id="@+id/action_bulleted"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/icon_bullet_list" />

                        <ImageButton
                            android:id="@+id/action_unordered_numbered"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/icon_numbered_list" />

                        <ImageButton
                            android:id="@+id/action_hr"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/icon_hr" />


                        <ImageButton
                            android:id="@+id/action_insert_link"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/icon_link" />


                        <ImageButton
                            android:id="@+id/action_erase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:src="@drawable/icon_erase" />
                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>